<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../layouts/head') %>
    </head>
    <header>
        <%- include('../layouts/header') %>
    </header>
    <body>
        <main>

            <% names.forEach(name => { %>
                <form method="post" action="/add">
                    <h2> <%= name %> </h2>
                    <input type="hidden" name="name" value=" <%= name %>">
                    <button type="submit">Add to Favorites</button>
                </form>
            <% }) %>

        </main>
    </body>
    <footer>
        <%- include('../layouts/footer') %>
    </footer>
</html>
